<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Material3.Light.NoActionBar"
    android:background="@color/md_theme_light_dialog_layout_color"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/customDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Room"
        android:textSize="14sp"
        android:textColor="@color/md_theme_light_primary_90"
        android:gravity="start"
        android:padding="16dp"
        android:paddingStart="40dp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_create_room"
        style="@style/InputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_below="@id/customDialogTitle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences"
            android:textColor="@color/md_theme_light_primary_90"
            android:textColorHint="@color/md_theme_light_primary_90"
            tools:ignore="SpeakableTextPresentCheck"

            />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>