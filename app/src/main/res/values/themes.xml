<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Panopticonapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary_40</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->

<!--        <item name="fontFamily">@font/poppins_regular</item>-->


    </style>



    <style name="InputText" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="errorTextColor">@color/md_theme_light_error_80</item>
        <item name="boxStrokeErrorColor">@color/md_theme_light_error_80</item>
        <item name="errorIconTint">@color/md_theme_light_error_80</item>
        <item name="startIconCheckable">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginEnd">52dp</item>
    </style>


    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_light_primary_90</item>
    </style>

    <style name="TextContent.Reguler">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>



    <style name="ButtonColorPrimer" parent="Theme.Panopticonapp" >
        <item name="android:background">@drawable/gradient_button_selector</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textColor">@color/md_theme_light_primary_90</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>