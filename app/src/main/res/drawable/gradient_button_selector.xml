<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- State saat tombol ditekan -->
<item android:state_pressed="true">
    <shape>
        <!-- Gradient untuk warna saat tombol ditekan -->
        <gradient
            android:startColor="@color/md_theme_light_primary_40"
            android:endColor="@color/md_theme_light_primary_90"
            android:type="linear"
            android:angle="45" />
        <!-- Sudut sudut tombol agar lebih tegas -->
        <corners android:radius="12dp" />
    </shape>
</item>

<!-- State default -->
<item>
    <shape>
        <!-- Gradient untuk warna default -->
        <gradient
            android:startColor="@color/md_theme_light_primary_90"
            android:endColor="@color/md_theme_light_primary_40"
            android:type="linear"
            android:angle="0" />
        <corners android:radius="12dp" />
    </shape>
</item>

</selector>
